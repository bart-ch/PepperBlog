<% if @article.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @article  do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
<br>
  <%= form.label :description %>
  <%= form.text_area :description %>
<br>
  <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
    <% cb.label(class: "form-check-inline form-check") { cb.check_box(class: "form-check-input") + cb.text } %>
  <% end %>
<br>
  <%= form.submit %>
<% end %>