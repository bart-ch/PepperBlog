<h1 class="text-center">Welcome to <%= @user.username %>'s page</h1>

<div class="row">
  <div class="col-md-4 offset-md-4 text-center">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>

<h4 class="text-center mt-3"><%= @user.username%>'s articles</h4>

<table class="table table-hover">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Created by</th>
    <th>Created at</th>
    <th>Updated at</th>
    <th></th>
    <th></th>
  </tr>
 <%= render 'articles/article', obj: @user.articles %>
 </table>