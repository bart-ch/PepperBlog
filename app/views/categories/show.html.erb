<% content_for :title, "Show Category" %>
<h1>Category: <%= @category.name  %></h1>

<% if logged_in? && current_user.admin? %>
<div>
  <%= link_to 'Edit category name', edit_category_path(@category) %> | 
  <%= link_to 'Delete category', category_path(@category), method: :delete %>
</div>
<% end %>

<div class="mt-3">
  <table class="table table-hover">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Categories</th>
      <th>Created by</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th></th>
      <th></th>
    </tr>
    <%= render 'articles/article', obj: @category_articles %>
  </table>
<div>
<div class="text-center">
  <%= will_paginate @category_articles %>
</div>